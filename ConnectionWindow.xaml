<Window x:Class="FlightSimulatorApp.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="Connection Window" Height="200" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Gray">
        <WrapPanel Margin="0,0,0.333,138.667">
            <Label>IP:</Label>
            <TextBox x:Name="UserIpBox" Text="127.0.0.1" TextAlignment="Left" Width="90" Margin="35,0,0,0" Height="18"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="0,32,0.333,108.667">
            <Label>PORT:</Label>
            <TextBox  x:Name="UserPortBox" Margin="16,0,0,0" Width="90" Height="17" Text="5402" TextAlignment="Left"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="0,0,0.333,138.667"></WrapPanel>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="215,106,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>

</Window>